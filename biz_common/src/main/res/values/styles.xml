<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="BaseTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="BasePrimaryTheme" mce_bogus="1" parent="@style/BaseTheme">
    </style>

    <style name="ThemeActivity" mce_bogus="1" parent="@style/BasePrimaryTheme">
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
    </style>

    <style name="MainActivityTheme" parent="@style/BasePrimaryTheme">
    </style>

    <style name="SplashActivityTheme" parent="@style/ThemeActivity">
        <item name="android:windowBackground">@drawable/test</item>
    </style>

    <style name="activityAnimation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_right</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_right</item>
    </style>

    <style name="ViewRipple" >
    </style>
</resources>